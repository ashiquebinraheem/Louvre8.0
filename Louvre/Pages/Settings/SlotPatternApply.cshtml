@page "/apply-slot-pattern"
@model Louvre.Pages.SlotPatternApplyModel
@{
    ViewData["Title"] = "Apply Slot Pattern";
    ViewData["ParentMenu"] = "Master";
    ViewData["PageURL"] = "apply-slot-pattern";
    ViewData["MasterPageURL"] = "slots";
}

<div class="main-panel">
    <div class="content">
        <div class="page-inner">
            <partial name="_BreadCrumb" />
            <div class="row">
                <div class="col-md-8">
                    <div class="card card-with-nav">
                        <div class="card-header">
                            <div class="row row-nav-line">
                                <ul class="nav nav-tabs nav-line nav-color-secondary" role="tablist">
                                    <li class="nav-item"> <a class="nav-link" role="tab" aria-selected="true">@ViewData["Title"] Details</a> </li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-body">
                            <form method="post" id="formBasic" enctype="multipart/form-data">
                                <div class="row mt-3">
                                    <div class="col-md-4">
                                        <div class="form-group form-group-default">
                                            <label>From Date</label>
                                            <input type="date" class="form-control" asp-for="FromDate" autofocus>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group form-group-default">
                                            <label>To Date</label>
                                            <input type="date" class="form-control" asp-for="ToDate">
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group form-group-default">
                                            <label>Branch</label>
                                            <select class="form-control" asp-for="BranchID" asp-items="ViewBag.Branches"></select>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group form-group-default">
                                            <label>Pattern</label>
                                            <select class="form-control" asp-for="SlotPatternID" asp-items="ViewBag.SlotPatterns"></select>
                                        </div>
                                    </div>

                                    <div class="col-md-2">
                                        <input type="button" id="btnApply" value="Apply" class="btn btn-primary w-100 fw-bold" />
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="col-md-12 overflow-table">
                                        <table id="gridFields" class="table table-bordered table-head-bg-info table-bordered-bd-info mt-4" role="grid" aria-describedby="add-row_info">
                                            <thead>
                                                <tr>
                                                    <th>Date</th>
                                                    <th>Slot Group</th>
                                                    <th style="width:10px"></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                        <partial name="_SaveButton" />
                                    </div>
                                </div>
                                <partial name="_ErrorPartial" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        var slotGroups = [];
        $(document).ready(function () {
            slotGroups =@Html.Raw(Json.Serialize(@ViewData["SlotGroups"]));
        });

        $('#btnApply').click(function (evt) {
            PostForm(evt, '/@ViewData["PageURL"]?handler=apply', '#formBasic', "applied");
        });

        applied = function (data) {
            var slotMasters = data;
            var newRow = "";
            for (var i = 0; i < slotMasters.length; i++) {
                newRow += `<tr>
                    <td><input class='form-control' type="date" name='SlotMasters[${i}].Date' value="${new Date(slotMasters[i].Date).toDateInputValue()}" /></td>
                    <td><select class='form-control' name='SlotMasters[${i}].SlotGroupID' id="SlotGroup_${i}"></select></td>
                    <td><a onclick="removeTableRow(this,$(this).closest('table').attr('id'))"><span class="fa fa-trash"></span></a></td>
                    </tr>`;
            }
            $(`#gridFields tbody`).append(newRow);

            for (var i = 0; i < slotMasters.length; i++) {
                fillCombo(`SlotGroup_${i}`, "ID", "Value", slotGroups, "--NA--");
                $(`#SlotGroup_${i}`).val(slotMasters[i].SlotGroupID);
            }
        }
    });
</script>