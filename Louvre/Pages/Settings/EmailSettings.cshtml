@page "/email-config"
@model Louvre.Pages.EmailSettingsModel
@{
    ViewData["Title"] = "Email Configuration";
    ViewData["ParentMenu"] = "Settings";
    ViewData["PageURL"] = "email-config";
    ViewData["MasterPageURL"] = "email-config";
}

<div class="main-panel">
    <div class="content">
        <div class="page-inner">
            <partial name="_BreadCrumb" />
            <div class="row">
                <div class="col-md-8">
                    <div class="card card-with-nav">
                        <div class="card-header">
                            <div class="row row-nav-line">
                                <ul class="nav nav-tabs nav-line nav-color-secondary" role="tablist">
                                    <li class="nav-item"> <a class="nav-link" role="tab" aria-selected="true">@ViewData["Title"] Details</a> </li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-body">
                            <form method="post" id="formBasic" enctype="multipart/form-data">
                                <input type="hidden" asp-for="Data.MailSettingsID" />

                                <div class="row mt-3">
                                    <div class="col-md-6">
                                        <div class="form-group form-group-default">
                                            <label>SMTPHost</label>
                                            <input type="text" class="form-control" asp-for="Data.SMTPHost" autofocus required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group form-group-default">
                                            <label>Port</label>
                                            <input type="text" class="form-control" asp-for="Data.Port" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group form-group-default">
                                            <label>Name</label>
                                            <input type="text" class="form-control" asp-for="Data.FromName" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group form-group-default">
                                            <label>Sender Email address</label>
                                            <input type="email" class="form-control" asp-for="Data.FromMail" required>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group form-group-default">
                                            <label>Password</label>
                                            <input type="password" class="form-control" asp-for="Data.Password" value="*******">
                                        </div>
                                    </div>

                                    <div class='col-md-6'>
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                <input class="form-check-input" type="checkbox" asp-for="Data.EnableSSL">
                                                <span class="form-check-sign">Use SSL</span>
                                            </label>
                                        </div>
                                    </div>
                                    @*<div class="col-md-6">
                                        <div class="form-group form-group-default">
                                            <label>Subject</label>
                                            <input type="text" class="form-control" asp-for="Data.DefaultSubject" required>
                                        </div>
                                    </div>*@
                                    <div class="col-md-12">
                                        <div class="form-group form-group-default">
                                            <label>Hazard Item Mail Receipients (Comma seperated list)</label>
                                            <input type="text" class="form-control" asp-for="Data.MailTo" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <partial name="_SaveButton" />
                                    <button type="reset" class="btn btn-danger">Reset</button>
                                </div>
                                <partial name="_MessagePartial" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>

    $(function () {

        checkSubMenus = function (ctrl, menuId) {

            $(`input[type="checkbox"][data-menu="${menuId}"]`).prop('checked', $(ctrl).prop('checked')).trigger('change');
        };
    });

</script>