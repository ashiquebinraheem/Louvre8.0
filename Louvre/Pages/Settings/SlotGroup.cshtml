@page "/slot-group/{id?}"
@model Louvre.Pages.SlotGroupModel
@{
    ViewData["Title"] = "Slot Group";
    ViewData["ParentMenu"] = "Settings";
    ViewData["PageURL"] = "slot-group";
    ViewData["MasterPageURL"] = "slot-groups";
}

<div class="main-panel">
    <div class="content">
        <div class="page-inner">
            <partial name="_BreadCrumb" />
            <div class="row">
                <div class="col-md-8">
                    <div class="card card-with-nav">
                        <div class="card-header">
                            <div class="row row-nav-line">
                                <ul class="nav nav-tabs nav-line nav-color-secondary" role="tablist">
                                    <li class="nav-item"> <a class="nav-link" role="tab" aria-selected="true">@ViewData["Title"] Details</a> </li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-body">
                            <form method="post" id="formBasic" enctype="multipart/form-data">
                                <input type="hidden" asp-for="Data.SlotGroupID" />
                                <div class="row mt-3">
                                    <div class="col-md-6">
                                        <div class="form-group form-group-default">
                                            <label>Name</label>
                                            <input type="text" class="form-control" asp-for="Data.SlotGroupName" autofocus>
                                        </div>
                                    </div>
                                    <div class="col-md-12 overflow-table">
                                        <table id="gridFields" class="table table-bordered table-head-bg-info table-bordered-bd-info mt-4" role="grid" aria-describedby="add-row_info">
                                            <thead>
                                                <tr>
                                                    <th>Time From</th>
                                                    <th>Time To</th>
                                                    <th>Request Count</th>
                                                    <th style="width:10px"></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @for (int i = 0; i < Model.Items.Count(); i++)
                                                {
                                                    <tr>
                                                        <td>
                                                            <input type="hidden" asp-for="Items[i].SlotGroupItemID" />
                                                            <input class="form-control" type="time" asp-for="Items[i].TimeFrom">
                                                        </td>
                                                        <td>
                                                            <input class="form-control" type="time" asp-for="Items[i].TimeTo">
                                                        </td>
                                                        <td>
                                                            <input class="form-control number" type="text" asp-for="Items[i].RequestCount">
                                                        </td>
                                                        <td style="width:10px">
                                                            <a onclick="removeTableRow(this,$(this).closest('table').attr('id'))"><span class="fa fa-trash"></span></a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <td>
                                                        <input class="form-control" type="time" id="TimeFrom">
                                                    </td>
                                                    <td>
                                                        <input class="form-control" type="time" id="TimeTo">
                                                    </td>
                                                    <td>
                                                        <input class="form-control number" type="text" id="RequestCount">
                                                    </td>
                                                    <td style="width:10px">
                                                        <a class="" onclick="addItem($(this).closest('table').attr('id'));"><i class="fa fa-plus-circle"></i></a>
                                                    </td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                                <div class="text-right mt-3 mb-3">
                                    <partial name="_SaveButton" />
                                    <partial name="_DeleteButton" />
                                </div>
                                <partial name="_ErrorPartial" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script>

    var gridFields = [
        {
            FieldType: "text",
            FieldName: "TimeFrom",
            ControlName: "TimeFrom",
            Required:"required"
        },
        {
            FieldType: "text",
            FieldName: "TimeTo",
            ControlName: "TimeTo",
            Required:"required"
        },
        {
            FieldType: "text",
            FieldName: "RequestCount",
            ControlName: "RequestCount",
            Required:"required"
        },
        {
            FieldType: "hidden",
            FieldName: "SlotGroupItemID",
        },
    ];

    $(function () {

        addItem = function (tableId) {
            addTableRow(tableId, 'Items', gridFields);
            $("#TimeFrom").focus();
        };
    });

</script>