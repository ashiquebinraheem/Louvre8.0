@page "/user-group-mail-config"
@model Progbiz.UserTypeMailConfigModel
@{
    ViewData["Title"] = "User Group Mail Configuration";
    ViewData["ParentMenu"] = "Master";
    ViewData["PageURL"] = "user-group-mail-config";
    ViewData["MasterPageURL"] = "user-group-mail-config";
}

<div class="main-panel">
    <div class="content">
        <div class="page-inner">
            <partial name="_BreadCrumb" />
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-with-nav">
                        <div class="card-header">
                            <div class="row row-nav-line">
                                <ul class="nav nav-tabs nav-line nav-color-secondary" role="tablist">
                                    <li class="nav-item"> <a class="nav-link" role="tab" aria-selected="true">@ViewData["Title"]</a> </li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-body">
                            <form method="post" id="formBasic" enctype="multipart/form-data">

                                <div class='overflow-table'>
                                    <table id="gridFields" class="table table-bordered table-head-bg-info table-bordered-bd-info" role="grid" aria-describedby="add-row_info">
                                        <thead>
											<tr>
												<th width="25%">User Group Name</th>
												<th>Email Address</th>
											</tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < Model.Data.Count(); i++)
                                            {
                                                <tr>
                                                    <td>
                                                        <input type="hidden" asp-for="Data[i].UserTypeID" />
                                                        <input class="form-control" type="text" asp-for="Data[i].UserTypeName">
                                                    </td>
													<td>
														<input class="form-control" type="text" asp-for="Data[i].Email">
													</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="text-right">
                                    <partial name="_SaveButton" />
                                </div>
                                <partial name="_ErrorPartial" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
