@if (User.IsInRole("Super-Admin") || User.IsInRole("Administrator") || User.IsInRole("Approver") || User.IsInRole("Disposal") || User.IsInRole("Security-Control-Room") || User.IsInRole("Security-Duty-Manager") || User.IsInRole("Employee"))
{
    <script>
        $(function () {

            $(document).ready(function () {

                GetAPI(`/api/notification/get-notification`, 'loadNotification');
            });

            loadNotification = function (data) {

                $(".notification-count").text(data.length);

                var notification = ``;

                if (data.length > 0) {
                    $.each(data, function () {
                        notification += `<a href="${this.RedirectURL}">
                                            <div class="notif-icon notif-primary"> <i class="${this.Icon}"></i> </div>
                                            <div class="notif-content">
                                                <span class="block">
                                                    ${this.Notification}
                                                </span>
                                            </div>
                                        </a>`;
                    });
                }

                $("#divNotification").html(notification);
            }
        })
    </script>
}