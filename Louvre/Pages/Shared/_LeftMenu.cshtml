                }

                @if (User.IsInRole("Super-Admin") || User.IsInRole("Administrator") || User.IsInRole("Approver") || User.IsInRole("Disposal"))
                {
                    <li class="nav-item">
                        <a data-toggle="collapse" href="#reports">
                            <i class="fa fa-file-excel"></i>
                            <p>Reports</p>
                            <span class="caret"></span>
                        </a>
                        <div class="collapse" id="reports">
                            <ul class="nav nav-collapse">
                                <li><a href="report/schedule-list"><span class="sub-item">Schedule List</span></a></li>
                                <li><a href="report/request-list"><span class="sub-item">Request List</span></a></li>
                            </ul>
                        </div>
                    </li>
                }


                @if (User.IsInRole("Super-Admin") || User.IsInRole("Administrator") || User.IsInRole("Approver") || User.IsInRole("Disposal"))
                {
                    <li class="nav-item">
                        <a data-toggle="collapse" href="#item">
                            <i class="fa fa-cubes"></i>
                            <p>Item</p>
                            <span class="caret"></span>
                        </a>
                        <div class="collapse" id="item">
                            <ul class="nav nav-collapse">
                                <li><a href="import-items"><span class="sub-item">Item Master</span></a></li>
                                <li><a href="po-owners"><span class="sub-item">PO Owners</span></a></li>
                            </ul>
                        </div>
                    </li>
                }

            </ul>
        </div>
    </div>
</div>
