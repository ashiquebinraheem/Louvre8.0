                                    <li><a href="duration"><span class="sub-item">Meeting Durations</span></a></li>
                                    <li><a href="user-group-mail-config"><span class="sub-item">User Group Mail Config</span></a></li>
                                }
                                @if (User.IsInRole("Super-Admin") || User.IsInRole("Administrator"))
                                {
                                    <li><a href="email-config"><span class="sub-item">Email Configuration</span></a></li>
                                }
                                @if (User.IsInRole("Company") || User.IsInRole("Individual"))
