@{
    var itemPageUrl = ViewData["ItemPageURL"]?.ToString() ?? "";
    var idField = ViewData["ItemIDFieldName"]?.ToString() ?? "Id";
    var gridColumns = ViewData["GridColumns"] ?? new object[0];
}


<form id="formSearch" method="post">
    <div class="main-panel">
        <div class="content">
            <div class="page-inner">
                <partial name="_BreadCrumb" />
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">

                            <div class="card-header">
                                <div class="d-flex align-items-center">
                                    <h4 class="card-title">@ViewData["Title"]</h4>
                                    @if (ViewData["HideNewButton"] == null)
                                    {
                                    <button type="button" class="btn btn-primary btn-round ml-auto" onclick="location.href = '@ViewData["ItemPageURL"]';">
                                        <i class="fa fa-plus"></i>
                                        Add New
                                    </button>
                                    }
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <div id="add-row_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                                        <div class="row">
                                            <div class="col-sm-12 col-md-6" id="divEntriesCount">

                                            </div>
                                            <div class="col-sm-12 col-md-6">
                                                <div class="input-group">
                                                    <label class="d-inline-block mt-2 mr-3">Search:</label>
                                                    <select name="SearchData.SearchColumnName" id="cmbSearchBy" class="form-control"></select>
                                                    <input type="text" onblur="searchData();" name="SearchData.SearchString" class="form-control form-control-sm" placeholder="" aria-controls="add-row">
                                                </div>
                                            </div>
                                            @*<div class="col-sm-12 col-md-6">

                                                <div id="add-row_filter" class="dataTables_filter">
                                                    <label>
                                                        Search:
                                                        <select name="SearchData.SearchColumnName" id="cmbSearchBy" class="form-control" style="float:left">
                                                        </select>
                                                        <input type="text" onblur="searchData();" name="SearchData.SearchString" style="float:left" class="form-control form-control-sm" placeholder="" aria-controls="add-row">
                                                    </label>
                                                </div>
                                            </div>*@
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12 overflow-table">
                                                <table id="gridSearchResult" class="display table table-striped table-hover dataTable" role="grid" aria-describedby="add-row_info">
                                                    <thead>
                                                    </thead>
                                                    <tbody>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        <partial name="_Pagination" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


<script>
    $(function() {

        // Safely pass server values to JS
        var itemPageUrl = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(itemPageUrl));
        var idField = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(idField));
        var searchGridColumns = @Html.Raw(Json.Serialize(gridColumns));

        var $cmbSearchBy = $("#cmbSearchBy");
        $cmbSearchBy.empty();
        searchGridColumns.forEach(function(col) {
            if (col.HaveSearchOption) {
                $cmbSearchBy.append($("<option>").val(col.ColumnName).text(col.DisplayName));
            }
        });

        loadSearchResultHeader();
        loadPaginationResult(entryCount, 1);

        function loadSearchResultHeader() {
            var $thead = $("#gridSearchResult thead");
            $thead.empty();
            var $tr = $("<tr>").attr("role", "row");
            $tr.append($("<th>").text("Action").css("width", "54px"));
            searchGridColumns.forEach(function(col) {
                var $th = $("<th>")
                    .text(col.DisplayName)
                    .css("min-width", col.Width)
                    .addClass("sorting")
                    .attr("onclick", `changeOrderBy(this, '${col.ColumnName}')`);
                $tr.append($th);
            });
            $thead.append($tr);
        }

        loadSearchResult = function(data) {
            var $tbody = $("#gridSearchResult tbody");
            $tbody.empty();
            if (!data || !Array.isArray(data.Data)) return;

            data.Data.forEach(function(entry, index) {
                var oddEven = (index % 2 === 0) ? "even" : "odd";
                var $tr = $("<tr>").attr("role", "row").addClass(oddEven);

                // Action button cell
                var idValue = entry && entry[idField] != null ? String(entry[idField]) : "";
                var href = itemPageUrl.replace(/\/$/, "") + "/" + encodeURIComponent(idValue);
                var $actionBtn = $("<button>")
                    .attr("type", "button")
                    .attr("data-toggle", "tooltip")
                    .attr("title", "Edit")
                    .addClass("btn btn-link btn-primary btn-lg")
                    .append($("<i>").addClass("fa fa-edit"));
                var $link = $("<a>").attr("href", href).append($actionBtn);
                var $actionDiv = $("<div>").addClass("form-button-action").append($link);
                $tr.append($("<td>").append($actionDiv));

                // Data cells safely
                searchGridColumns.forEach(function(col) {
                    var cellValue = entry && entry[col.ColumnName] != null ? entry[col.ColumnName] : "";
                    $tr.append($("<td>").text(cellValue));
                });

                $tbody.append($tr);
            });

            setPaginationLink(data.PageIndex, data.TotalPages, data.PageSize, data.TotalCount);
        };
    });

</script>


