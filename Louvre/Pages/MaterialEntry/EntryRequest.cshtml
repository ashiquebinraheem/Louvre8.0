            }

            if ($(`#gridMaterial tbody tr`).length == 0 && $("#cmbRequestMode").val() == "1") {
                errorMessage("There is no material added!!");
                return;
            }

            //if ($(`#gridVehicle tbody tr`).length == 0) {
            //    errorMessage("There is no vehicle added!!");
            //    return;
            //}

