            //     fillCombo('cmbLocation', 'LocationID', 'LocationName', locationsConstruction, '  ');
            // } else {

            //     locations = @Html.Raw(Json.Serialize(ViewData["Locations"]));
            //     fillCombo('cmbLocation', 'LocationID', 'LocationName', locations, '  ');
            // }
            if ($(this).val() == "1") {
                $("#divMaterial").show();
                $("#divMaterialDetails").show();
            }
            else {
                $("#divMaterial").hide();
                $("#divMaterialDetails").hide();
            }
        });

        fillLocation = function () {

            var requestMode = getRowByFieldNameValue(requestModes, 'RequestModeID', $("#cmbRequestMode").val())

            var cmb = $("#cmbLocation");
            cmb.empty();
            cmb.append($("<option/>").val(null).html(''));
            $.each(locations, function () {
                if ($("#cmbBranch option:selected").text() == "Guggenheim") {
                    if (this.LocationTypeID == requestMode.LocationTypeID && this.LocationName == "Construction Access")
                        cmb.append($("<option/>").val(this['LocationID']).html(this['LocationName']));
                } else {
                    if (this.LocationTypeID == requestMode.LocationTypeID && this.LocationName != "Construction Access")
                        cmb.append($("<option/>").val(this['LocationID']).html(this['LocationName']));
                }
            });
        }

        //#endregion

        //#region Request Type

        $("#cmbMaterialType").change(function () {

            if ($(this).val() == "1") {
                $("#divExplosive").show();
            }
            else {
                $("#divExplosive").hide();
                $("#cbContainsExplosive").prop('checked', false);
            }
