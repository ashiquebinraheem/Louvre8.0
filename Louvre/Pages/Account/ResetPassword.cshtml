@page "/reset-password/{userId}/{securityStamp}"
@model Louvre.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "_LoginLayout";
}
<form method="post" enctype="multipart/form-data">

    <div class="container container-login animated fadeIn">
        <h3 class="text-center">Forgot Password</h3>
        <div class="login-form">

            <div class="form-group">
                <label for="passwordsignin" class="placeholder"><b>Password</b></label>
                <div class="position-relative">
                    <input asp-for="Password" type="password" class="form-control" required>
                    <div class="show-password">
                        <i class="flaticon-interface"></i>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="confirmpassword" class="placeholder"><b>Confirm Password</b></label>
                <div class="position-relative">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" required>
                    <div class="show-password">
                        <i class="flaticon-interface"></i>
                    </div>
                </div>
            </div>

            <div class="row form-action">
                <div class="col-md-6">
                    <a href="login" class="btn btn-danger btn-link w-100 fw-bold">Cancel</a>
                </div>
                <div class="col-md-6">
                    <input type="submit" id="btnSave" value="Submit" class="btn btn-primary w-100 fw-bold" />
                </div>
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class='col-md-12 col-xs-12' style="padding:0;">
                        <div class="alert alert-danger" style="margin:10px 0px 10px 0px;">
                            @TempData["ErrorMessage"]
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</form>
